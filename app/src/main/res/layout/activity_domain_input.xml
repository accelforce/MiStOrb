<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/activity_edit_text_domain_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/activity_domain_input_hint" />

    <Button
        android:id="@+id/activity_button_domain_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_domain_input_button_go" />

    <TextView
        android:id="@+id/activity_text_view_domain_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>